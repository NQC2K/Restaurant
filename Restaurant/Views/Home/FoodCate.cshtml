@model List<Restaurant.Models.Food>


@{
    ViewBag.Title = "FoodCate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/foodcate/foodcate.min.js"></script>
    @*<script src="~/Scripts/foodcate/mustache.min.js"></script>>
    <script src="~/Scripts/foodcate/twbsPagination.min.js"></script>
    <script src="~/Scripts/foodcate/homeController.js"></script>*@
}
@{
    Html.RenderAction("PartialHeader", "Home");
}

<!-- header section ends  -->
<!-- search-form  -->

<section class="popular" id="popular">
    <div class="search">
        <input type="text" id="txtSearch" placeholder="Type food name" />
        <button class="btn btn-primary" id="btnSearch"><i class="fas fa-search"></i></button>
    </div>
    <div class="heading">
        <span>menu</span>
        <h3>our dishes</h3>
    </div>

    <div class="box-container" id="tblData">
    </div>
    <div class="center">
        <div id="pagination" class="pagination center">
        </div>
    </div>
    <script id="data-template" type="x-tmpl-mustache">
        <div class="box">
            <a href="#" class="fas fa-heart"></a>
            <div class="image">
                <a href="">
                    <img src="/Content/images/{{Image}}" alt="">
                </a>
            </div>
            <div class="content">
                <h3>{{FoodName}}</h3>
                <div class="stars">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                </div>
                <div class="price">{{PriceDiscount}}VND <span>{{Price}}VND</span></div>
                <a href="/Cart/AddItem?foodid={{FoodID}}&quantity=1" class="btn">add to cart</a>
            </div>
        </div>
    </script>
</section>
<div class="modal fade" id="modalAddUpdate" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add/Update Food</h4>
            </div>
            <div class="modal-body">
                <form role="form" id="frmSaveData">
                    <div class="form-group">
                        <label for="txtName">Name:</label>
                        <input type="text" class="form-control" name="txtName" id="txtName">
                        <input type="hidden" id="txtId" value="0" />
                    </div>
                    <div class="form-group">
                        <label for="txtCateId">CateId:</label>
                        <input type="number" class="form-control" name="txtCateId" id="txtCateId">
                    </div>
                    <div class="form-group">
                        <label for="txtDesc">Description:</label>
                        <input type="text" class="form-control" name="txtDesc" id="txtDesc">
                    </div>
                    <div class="form-group">
                        <label for="txtPrice">Price:</label>
                        <input type="number" class="form-control" name="txtPrice" id="txtPrice">
                    </div>
                    <div class="form-group">
                        <label for="txtPriceDiscount">Price Discount:</label>
                        <input type="number" class="form-control" name="txtPriceDiscount" id="txtPriceDiscount">
                    </div>
                    @*<input type="file" name="file" id="file" />
                    <input type="submit" name="submit" id="upload" value="Submit" />*@
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

